<form aria-label="Verify your package" id="verify-metadata-form">
    @Html.AntiForgeryToken()

    <div id="verify-collapser-container" class="hidden">
        <h2>
            <a href="#" role="button" data-toggle="collapse" data-target="#verify-package-section"
               aria-expanded="true" aria-controls="verify-metadata-form" id="show-verify-package-section">
                <i class="ms-Icon ms-Icon--ChevronDown" aria-hidden="true"></i>
                <span>Verify</span>
            </a>
        </h2>
    </div>

    <div id="verify-package-container">
    </div>

    @Html.Partial("_VerifyMetadata")

    <div id="readme-collapser-container" class="hidden">
        <h2>
            <a href="#" role="button" data-toggle="collapse" data-target="#readme-package-form"
               aria-expanded="true" aria-controls="readme-package-form" id="show-readme-package-form">
                <i class="ms-Icon ms-Icon--ChevronDown" aria-hidden="true"></i>
                <span>Import Documentation</span>
            </a>
        </h2>
    </div>

    <div id="import-readme-container">
    </div>
    @Html.Partial("_ImportReadMe")

    <div id="submit-collapser-container" class="hidden">
        <h2>
            <a href="#" role="button" data-toggle="collapse" data-target="#submit-package-form"
               aria-expanded="true" aria-controls="submit-package-form" id="show-submit-package-form">
                <i class="ms-Icon ms-Icon--ChevronDown" aria-hidden="true"></i>
                <span>Submit</span>
            </a>
        </h2>
    </div>

    <div id="submit-package-container">
    </div>
    @if(Model != null && Model.InProgressUpload != null && Model.InProgressUpload.RecaptchaEnabled)
    {
        <script type="text/javascript">RecaptchaEnabled = true;</script>
        <script type="text/html" id="submit-package-template">
            <div class="form-group btn-toolbar row" id="submit-package-form">
                <div class="col-xs-6">
                    <div id="recaptcha" class="g-recaptcha" data-sitekey="@Config.Current.ReCaptchaPublicKey" data-size="invisible"
                         data-callback="OnVerifySubmit" data-tabindex="-1"></div>
                    <input type="button" class="btn btn-primary btn-block" value="Submit" id="verify-submit-button" />
                </div>
                <div class="col-xs-6">
                    <input type="button" class="btn btn-default btn-block" value="Cancel" id="verify-cancel-button" />
                </div>
            </div>
        </script>
    }
    else
    {
        <script type="text/javascript">RecaptchaEnabled = false;</script>
        <script type="text/html" id="submit-package-template">
            <div class="form-group btn-toolbar row" id="submit-package-form">
                <div class="col-xs-6">
                    <input type="button" class="btn btn-primary btn-block" value="Submit" id="verify-submit-button" />
                </div>
                <div class="col-xs-6">
                    <input type="button" class="btn btn-default btn-block" value="Cancel" id="verify-cancel-button" />
                </div>
            </div>
        </script>
    }
</form>