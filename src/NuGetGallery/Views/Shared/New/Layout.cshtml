<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @RenderSection("SocialMeta", required: false)
    @RenderSection("Meta", required: false)

    <title>
        @(Config.Current.Brand)
        @(String.IsNullOrWhiteSpace(ViewBag.Title) ? "" : "| " + ViewBag.Title)
    </title>

    <link href="@Url.Content("~/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
    <link title="NuGet.org" type="application/opensearchdescription+xml" href="@Url.Content("~/opensearch.xml")" rel="search">

    <link href="https://fonts.googleapis.com/css?family=PT+Sans" rel="stylesheet">
    @Styles.Render("~/Content/new/css/site.css")

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    @RenderSection("TopStyles", required: false)

    @ViewHelpers.AnalyticsScript()
    @RenderSection("TopScripts", required: false)
    @ViewHelpers.ReleaseMeta()
    @ViewHelpers.InstrumentationScript()
</head>
<body>
    @if (!string.IsNullOrWhiteSpace(Config.Current.WarningBanner))
    {
        <div id="service-alert">
            <div class="banner-warning">@Config.Current.WarningBanner</div>
        </div>
    }

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Home()"><img class="navbar-logo" src="~/Content/new/img/logo-94x27.png" alt="Smaller NuGet logo in header" /></a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.PackageList()">Packages</a></li>
                    <li><a href="@Url.UploadPackage()">Upload</a></li>
                    @if (StatisticsHelper.IsStatisticsPageAvailable)
                    {
                        <li><a href="@Url.Statistics()">Statistics</a></li>
                    }
                    <li><a href="https://docs.microsoft.com/en-us/nuget/">Documentation</a></li>
                    <li><a href="@Url.RouteUrl(RouteName.Downloads)">Downloads</a></li>
                    <li><a href="http://blog.nuget.org/">Blog</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#log-in">Log in</a></li>
                    <li><a href="#sign-up">Sign up</a></li>
                </ul>
            </div>
        </div>
    </nav>

    @if (TempData.ContainsKey("Message"))
    {
        <p class="message">@TempData["Message"]</p>
    }
    @RenderBody()

    @Html.Partial("New/Footer")
    @Scripts.Render("~/Scripts/new/site.js")
    @RenderSection("BottomScripts", required: false)
</body>
</html>
