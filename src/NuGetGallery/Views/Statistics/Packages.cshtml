@model StatisticsPackagesViewModel
@{
    ViewBag.Title = "Package Download Statistics";
    ViewBag.Tab = "Statistics";
    Layout = "~/Views/Shared/Gallery/Layout.cshtml";
}

<div class="container main-container page-statistics-most-downloaded">
    <div class="row">
        <div class="col">
            <h1>Most Downloaded Packages</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h2>Top 100 Over the Last 6 Weeks</h2>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead class="headings">
                <tr class="packages">
                    <th>&nbsp;</th>
                    <th>Package</th>
                    <th>Downloads</th>
                </tr>
            </thead>

            <tbody class="data">
                @{
                    var index = 0;
                    foreach (var item in Model.DownloadPackagesAll)
                    {
                        index++;

                        <tr>
                            <td>@index</td>
                            <td><a href="@Url.Package(item.PackageId)">@item.PackageId</a></td>
                            <td><a href="@Url.StatisticsPackageDownloadByVersion(item.PackageId)">@Model.DisplayDownloads(item.Downloads)</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        @Html.Partial("_LastUpdated", Model)
    </div>
</div>

