@{
    ViewBag.Title = "Invalid Request";
    Response.StatusCode = 400;
    Layout = "~/Views/Shared/Gallery/Layout.cshtml";
}

@ViewHelpers.ErrorPage(Url, Html, "400", "Invalid Request", @<text>
<p>We can't process your request because it was invalid.</p></text>, @<text>
<p>You've probably disabled cookies in your browser. Please enable cookies in your browser settings and try again.</p></text>)