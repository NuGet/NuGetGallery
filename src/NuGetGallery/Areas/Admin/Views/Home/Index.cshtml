@model HomeViewModel
@{
    ViewBag.Title = "Site Administration";
    ViewBag.Tab = "Admin";
}

<section id="actions">
    <h1>Site Administration</h1>
    <ul>
        <li>
            <h2>
                <a class="action-menu-link" href="~/Admin/Database">
                    <i class="icon-magic action-menu-icon"></i>
                    <span class="action-menu-text">Database Administration</span>
                </a>
            </h2>
            <p>
                Get direct access to the database to manipulate Users, Packages, etc. USE WITH CAUTION.
            </p>
        </li>
        <li>
            <h2>
                <a class="action-menu-link" href="~/Admin/Errors.axd">
                    <i class="icon-reorder action-menu-icon"></i>
                    <span class="action-menu-text">Error Logs</span>
                </a>
            </h2>
            <p>
                View Application Error Logs.
            </p>
        </li>
        <li>
            <h2>
                <a class="action-menu-link" href="@Url.Action(actionName: "Index", controllerName: "LockPackage")">
                    <i class="icon-lock action-menu-icon"></i>
                    <span class="action-menu-text">Lock Packages</span>
                </a>
            </h2>
            <p>
                Lock and unlock packages on the gallery.
            </p>
        </li>
        <li>
            <h2>
                <a class="action-menu-link" href="@Url.Action(actionName: "Index", controllerName: "Delete")">
                    <i class="icon-trash action-menu-icon"></i>
                    <span class="action-menu-text">Delete Packages</span>
                </a>
            </h2>
            <p>
                Delete packages from the gallery.
            </p>
        </li>
        <li>
            <h2>
                <a class="action-menu-link" href="@Url.Action(actionName: "Index", controllerName: "Lucene")">
                    <i class="icon-search action-menu-icon"></i>
                    <span class="action-menu-text">Lucene Index Maintenance</span>
                </a>
            </h2>
            <p>
                Maintain the Lucene full-text search index.
            </p>
        </li>
        <li>
            <h2>
                <a class="action-menu-link" href="@Url.Action(actionName: "Index", controllerName: "SupportRequest")">
                    <i class="icon-user action-menu-icon"></i>
                    <span class="action-menu-text">Support Requests</span>
                </a>
            </h2>
            <p>
                Handle support requests
            </p>
        </li>
        <li>
            <h2>
                <a class="action-menu-link" href="@Url.Action(actionName: "Index", controllerName: "Config")">
                    <i class="icon-gears action-menu-icon"></i>
                    <span class="action-menu-text">Configuration</span>
                </a>
            </h2>
            <p>
                View Application Configuration
            </p>
        </li>
        <li>
            <h2>
                <a class="action-menu-link" href="@Url.Action(actionName: "ClearContentCache", controllerName: "Home")">
                    <i class="icon-trash action-menu-icon"></i>
                    <span class="action-menu-text">Clear Content Cache</span>
                </a>
            </h2>
            <p>
                Clear Content Cache
            </p>
        </li>
        <li>
            <h2>
                <a class="action-menu-link" href="@Url.Action(actionName: "Index", controllerName: "SecurityPolicy")">
                    <i class="icon-user action-menu-icon"></i>
                    <span class="action-menu-text">Security Policies</span>
                </a>
            </h2>
            <p>
                Manage User Security Policies
            </p>
        </li>
        <li>
            <h2>
                <a class="action-menu-link" href="@Url.Action(actionName: "Index", controllerName: "ReservedNamespace")">
                    <i class="icon-user action-menu-icon"></i>
                    <span class="action-menu-text">Reserve Namespace</span>
                </a>
            </h2>
            <p>
                Manage Namespace Reservation
            </p>
        </li>
        @if (Model.ShowValidation)
    {
        <li>
            <h2>
                <a class="action-menu-link" href="@Url.Action(actionName: "Index", controllerName: "Validation")">
                    <i class="icon-check action-menu-icon"></i>
                    <span class="action-menu-text">Validation</span>
                </a>
            </h2>
            <p>
                Inspect Package Validations
            </p>
        </li>
}
        <li>
            <h2>
                <a class="action-menu-link" href="@Url.Action(actionName: "Index", controllerName: "DeleteAccount")">
                    <i class="icon-trash action-menu-icon"></i>
                    <span class="action-menu-text">Delete Account</span>
                </a>
            </h2>
            <p>
                Manage Account Deletion
            </p>
        </li>
    </ul>
</section>
