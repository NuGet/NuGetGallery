@using System.Linq;
@using System.Collections;
@using NuGetGallery;

@helper PreviousNextPager(this HtmlHelper helper, IPreviousNextPager pager) {
    if (pager.HasNextPage || pager.HasPreviousPage) {
        <ul class="group pager">        
            <li class="page-previous">
                @if (pager.HasPreviousPage) { 
                    <a href="@pager.PreviousPageUrl">Previous</a>
                }
                else {
                    <span>Previous</span>
                }
            </li>
            <li class="page-next">
                @if (pager.HasNextPage) { 
                    <a href="@pager.NextPageUrl">Next</a>
                }
                else {
                    <span>Next</span>
                }
            </li>
        </ul>
    }
}

@helper Option(this HtmlHelper helper, string value, string label, string currentValue) {
    <option value="@value" @if (value == currentValue) {<text>selected="selected"</text>}>@label</option>    
}

@helper UploadSequence(this HtmlHelper helper, int currentStep) {
    @SequenceStep(helper, 1, "Upload", currentStep)
    @SequenceStep(helper, 2, "Verify Details", currentStep)
}

@helper SequenceStep(this HtmlHelper helper, int step, string caption, int currentStep) {
    if (currentStep == step) {
        <li class="current"><a href="#"><span>@step </span>@caption</a></li>
    }
    else {
        <li><span>@step </span>@caption</li>
    }    
}

