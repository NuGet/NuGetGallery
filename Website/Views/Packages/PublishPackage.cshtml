@using NuGetGallery;
@model SubmitPackageViewModel
@{
    ViewBag.Tab = "Upload";
    Layout = "~/Views/Shared/TwoColumnLayout.cshtml";
}

@section LeftNav {
    <img src="@Links.Content.Images.contribGraphic_png" alt="Contribution image" />
    <p>Submit your package for others to enjoy.</p>
}    

@section ContentHeader {            
    <h2>Submit Package</h2>
    <ul class="right" id="sequence">
        @ViewHelpers.UploadSequence(2)
    </ul>
}
   
<form method="post" action="@Url.Current()" class="package-form">
    <h3>Verify the details of your package</h3>
    <p class="long note">
        These package details are read from the package file and cannot be changed. 
        If you have a newer version of your package that you’d like to submit in place 
        of this one, <a href="@Url.UploadPackage()">click here to add a new 
        contribution</a>. Ensure that the new version has the same Package ID, but a 
        new Version number.
    </p>
    <ul>
        <li>
            <strong>Package ID</strong>
            <p>@Model.Id</p>
        </li>
        <li>
            <strong>Version</strong>
            <p>@Model.Version</p>
        </li>
        @if (!String.IsNullOrEmpty(Model.Title)) {
        <li>
            <strong>Title</strong>
            <p>@Model.Title</p>
        </li>
        }
        <li>
            <strong>Description</strong>
            <p>@Model.Description</p>
        </li>
        <li>
            <strong>Authors</strong>
            <p>@Model.Authors</p>
        </li>
        @if (Model.RequiresLicenseAcceptance) {
        <li>
            Requires License Acceptance
        </li>
        }
        @if (!String.IsNullOrEmpty(Model.LicenseUrl)) {
        <li>
            <strong>License URL</strong>
            <p>@Model.LicenseUrl</p>
        </li>
        }
        @if (!String.IsNullOrEmpty(Model.Tags)) {
        <li>
            <strong>Tags</strong>
            <p>@Model.Tags</p>
        </li>
        }
        @if (!String.IsNullOrEmpty(Model.ProjectUrl)) {
        <li>
            <strong>Project URL</strong>
            <p>@Model.ProjectUrl</p>
        </li>
        }
        <li>
            @Html.EditorFor(package => package.Listed)
            @Html.LabelFor(package => package.Listed, "List this package in search results.")
        </li>
        <li class="buttons">
            @Html.AntiForgeryToken()
            <input type="submit" value="Verify" />
        </li>
    </ul>
</form>
