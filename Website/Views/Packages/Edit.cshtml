@model EditPackageRequest
@{
    ViewBag.Title = "Edit Package";
    ViewBag.Tab = "Packages";
}

@using (Html.BeginForm())
{
    <fieldset class="form">
        <legend>Edit Package</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @(Html.EditorFor<EditPackageRequest,EditPackageRegistrationRequest>(model => model.EditPackageRegistrationRequest))
    </fieldset>
    <fieldset class="form">
        <legend>Edit Package Version @(Model.Version)</legend>

        @(Html.EditorFor<EditPackageRequest,EditPackageVersionRequest>(model => model.EditPackageVersionRequest))

        <img src="@Url.Content("~/content/images/required.png")" alt="Blue border on left means required." />
    </fieldset>
    <input type="submit" value="Submit" title="Submit" />
}

<p>
    NuGet only allows you to update descriptive package metadata on the website.
</p>
<p>
    To edit the package dependencies, target frameworks, or license, you must upload a new version of the package.
</p>
