@model ListPackageItemViewModel
<div class="content-item package">
    <div class="packageItem packages @if (Model.IsOwner(User)) {<text>mine</text>}">
        <a href="@Url.Package(Model)">
            <img src="@(Model.IconUrl ?? Links.Content.Images.packageDefaultIcon_50x50_png)" class="thumbnail" title="@Model.Id Package icon" />
        </a>
        <header>
            <h3 style="display: inline-block;">
                <a href="@Url.Package(Model.Id, Model.UseVersion ? Model.Version : null)">@Model.Title @if(Model.UseVersion) {<text> @Model.Version</text>}</a>
            </h3>
            <div class="downloads">
                @Model.DownloadCount Downloads
            </div>
        </header>
        <div class="detail">
            <p class="description">
                @Model.Description
                <a href="@Url.Package(Model)">More information</a>
            </p>
            <ul class="packageMeta">
                @if (Model.Tags.AnySafe()) {
                    <li>Tags: @Model.Tags.Flatten(@<a href="@Url.Search(item)">@item</a>)</li>
                }
                <li>Owners: @ViewHelpers.OwnersGravatar(Model.Owners, 24, Url, showName: false)</li>
                <li>Authors: @Model.Authors.Flatten(@<a href="@Url.Search(item.Name)">@item.Name</a>)</li>
            </ul>
        </div>
    </div>
</div>