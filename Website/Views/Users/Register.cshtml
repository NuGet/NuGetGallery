@model RegisterRequest
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/TwoColumnLayout.cshtml";
}

@section SideColumn {
    <p>With your account, you’ll be able to achieve all kinds of fame and glory by submitting
        your own packages.</p>
    <p>Already have an account? <a href="@Url.LogOn()">Log On.</a></p>
}


<h1>Create A New Account</h1>

@using (Html.BeginForm())
{
    <fieldset class="form">
        <legend>Register Form</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @Html.EditorForModel()

        <div id="form-field-register-policies" class="form-field">
            @Html.ValidationMessageFor(r => r.AcceptTerms)
            @Html.CheckBoxFor(r => r.AcceptTerms)
            <label for="AcceptTerms">
                I have read and accept the @Html.ActionLink("Terms of Use", "Terms", MVC.Pages.Name)
                        and the @Html.ActionLink("Privacy Policy", "Privacy", MVC.Pages.Name)
                            </label>
        </div>

        <img src="@Url.Content("~/content/images/required.png")" alt="Blue border on left means required." />

        <input type="submit" value="Register" title="Register" />
    </fieldset>
}